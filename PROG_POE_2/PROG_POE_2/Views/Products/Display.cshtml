@model IEnumerable<PROG_POE_2.Models.Product>

@{
    ViewData["Title"] = "Display";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Create" class="btn btn-primary btn-lg shadow-btn">Create New Product</a>
</p>

<table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th class="text-center">
               ID
            </th>
            <th class="text-center">
                Product Image
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.ProductionDate)
            </th>
            <th class="text-center"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.FarmerID)
                </td>
                <td class="text-center">
                    @if (item.Image != null)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Image)" alt="Product Image" class="product-image-icon">
                    }
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.ProductionDate)
                </td>
                <td class="text-center action-buttons">
                    <a asp-action="Edit" asp-route-id="@item.ProductID" class="btn btn-warning btn-sm shadow-btn">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.ProductID" class="btn btn-info btn-sm shadow-btn">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.ProductID" class="btn btn-danger btn-sm shadow-btn">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Styles {
    <style>
        .container {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #212529;
        }

        .header {
            margin-bottom: 30px;
            text-align: center;
        }

            .header h1 {
                color: #343a40;
            }

        .table {
            margin-top: 20px;
        }

            .table th,
            .table td {
                text-align: center;
                vertical-align: middle;
            }

        .thead-dark th {
            background-color: #343a40;
            color: #fff;
        }

        .product-image-icon {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .btn-lg {
            padding: 10px 20px;
            font-size: 1.25rem;
            border-radius: 0.3rem;
        }

        .shadow-btn {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: box-shadow 0.3s;
        }

            .shadow-btn:hover {
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

        .btn-sm {
            padding: 5px 10px;
            font-size: 0.875rem;
        }

        .text-danger {
            color: #dc3545 !important;
        }

        .thead-dark th {
            border: 1px solid #454d55;
        }

        .table-bordered td, .table-bordered th {
            border: none;
        }

        .table-hover tbody tr:hover {
            background-color: #f5f5f5;
        }

        .action-buttons {
            white-space: nowrap;
        }

            .action-buttons a {
                margin-right: 5px;
            }
    </style>
}
