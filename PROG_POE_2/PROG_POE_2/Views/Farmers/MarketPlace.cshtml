
@{
    ViewData["Title"] = "MarketPlace";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center">Green Energy Marketplace</h1>
    <p class="text-center mb-5">Explore green energy solutions tailored for agricultural needs. Discover innovative products that can help make your farm more sustainable and efficient.</p>

    <div class="row">
        <!-- Solar-Powered Irrigation System -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <img src="~/Images/Solar-Powered Irrigation System.jpg" class="card-img-top" alt="Solar-Powered Irrigation">
                <div class="card-body text-center">
                    <h5 class="card-title">Solar-Powered Irrigation System</h5>
                    <p class="card-text">Efficiently water your crops with renewable solar energy.</p>
                    <a href="#" class="btn btn-primary">Learn More</a>
                </div>
            </div>
        </div>

        <!-- Wind Turbines for Farms -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <img src="~/Images/Wind Turbines for Farms.jpg" class="card-img-top" alt="Wind Turbine">
                <div class="card-body text-center">
                    <h5 class="card-title">Wind Turbines for Farms</h5>
                    <p class="card-text">Harness wind energy to power your farm operations.</p>
                    <a href="#" class="btn btn-primary">Learn More</a>
                </div>
            </div>
        </div>

        <!-- Biogas Energy Solutions -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <img src="~/Images/Biogas Energy Solutions.jpg" class="card-img-top" alt="Biogas Energy">
                <div class="card-body text-center">
                    <h5 class="card-title">Biogas Energy Solutions</h5>
                    <p class="card-text">Convert organic waste into renewable energy for your farm.</p>
                    <a href="#" class="btn btn-primary">Learn More</a>
                </div>
            </div>
        </div>
    </div>
</div>

