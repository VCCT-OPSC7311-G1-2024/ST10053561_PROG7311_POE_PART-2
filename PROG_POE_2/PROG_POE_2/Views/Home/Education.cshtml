
@{
    ViewData["Title"] = "Education";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center">Educational Resources</h1>
    <p class="text-center mb-5">Participate in online courses, webinars, and workshops on green energy in agriculture. Enhance your knowledge and skills to promote sustainable farming practices.</p>

    <div class="row">
        <!-- Online Courses -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <img src="~/Images/Online Courses.jpg" class="card-img-top" alt="Online Courses">
                <div class="card-body text-center">
                    <h5 class="card-title">Online Courses</h5>
                    <p class="card-text">Enroll in comprehensive online courses covering various aspects of green energy in agriculture.</p>
                    <a href="#" class="btn btn-primary">Learn More</a>
                </div>
            </div>
        </div>

        <!-- Webinars -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <img src="~/Images/Webinars.jpg" class="card-img-top" alt="Webinars">
                <div class="card-body text-center">
                    <h5 class="card-title">Webinars</h5>
                    <p class="card-text">Join live webinars hosted by experts in sustainable farming and renewable energy.</p>
                    <a href="#" class="btn btn-primary">Learn More</a>
                </div>
            </div>
        </div>

        <!-- Workshops -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <img src="~/Images/Workshops.jpg" class="card-img-top" alt="Workshops">
                <div class="card-body text-center">
                    <h5 class="card-title">Workshops</h5>
                    <p class="card-text">Participate in hands-on workshops to learn practical applications of green energy solutions.</p>
                    <a href="#" class="btn btn-primary">Learn More</a>
                </div>
            </div>
        </div>
    </div>
</div>

